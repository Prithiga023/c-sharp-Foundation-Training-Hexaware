insert into Student (StudentId, Name, Age, Email)
values (101, 'John Doe', 29, 'john.doe@example.com');
-- Date of Birth isn't part of the table schema, so we skip that.


insert into Course (CourseId, CourseName, Credits)
values (1, 'Introduction to Programming', 4);

insert into Enrollment (EnrollmentId, StudentId, CourseId, Grade)
values (201, 101, 1, 'A');

alter table Teacher add Email varchar(100);

update Teacher
set Email = 'new.email@example.com'
where TeacherId = 1;

delete from Enrollment
where StudentId = 101 and CourseId = 1;

alter table Course add TeacherId int;
alter table Course add constraint FK_Teacher foreign key (TeacherId) references Teacher(TeacherId);

insert into Teacher (TeacherId, Name, Department)
values (1, 'Dr. Smith', 'Computer Science');


update Course
set TeacherId = 1
where CourseId = 1;


delete from Enrollment
where StudentId = 101;

delete from Student
where StudentId = 101;

update Payment
set Amount = 5000.00
where PaymentId = 1;




